# LinuxDo OAuth2 环境变量配置

# OAuth2 基础配置
LINUXDO_OAUTH_ENABLED=true                  # 启用 LinuxDo OAuth 登录
LINUXDO_OAUTH_AUTO_REGISTER=true           # 自动注册新用户
LINUXDO_OAUTH_MIN_TRUST_LEVEL=3            # 最低信任等级限制
LINUXDO_OAUTH_DEFAULT_ROLE=user            # 自动注册用户的默认角色 (user|admin)

# OAuth2 应用凭证 (必需)
LINUXDO_OAUTH_CLIENT_ID=your_client_id     # LinuxDo OAuth 应用 ID
LINUXDO_OAUTH_CLIENT_SECRET=your_secret    # LinuxDo OAuth 应用密钥

# 可选配置
LINUXDO_OAUTH_REDIRECT_URI=               # 自定义回调地址，留空使用自动生成